<h1>Post #<%= @post.id %> Details</h1>
<div class="border">
    <h2>Post #<%= @post.id %> by <%= @user.name %></h2>
    <%= render 'shared/count-likes-comments', post: @post %>
    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
</div>
<%= render 'shared/list-comments', post: @post %>
<%= form_with model: @comment, url: post_comments_path(@post), local: true do |form| %>
    <div class="field">
        <%= form.hidden_field :author_id, value: @post.author.id %>
        <%= form.hidden_field :post_id, value: @post.id %>
        <%= form.label :text %>
        <%= form.text_area :text %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>


