<h1>New Post</h1>

<%= form_with model: @post, url: new_post_path do |form| %>
    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class="field">
        <%= form.label :text %>
        <%= form.text_area :text %>
    </div>
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>