<h1>User Posts</h1>
<div>
    <img src="<%= @user.photo %>" alt="<%= @user.name %>" />
    <%= link_to @user.name, user_path(@user) %>
    <%= link_to @user.posts.count, user_posts_path(@user) %>
</div>
<% if @posts.any? %>
    <div>
        <% @posts.each do |post| %>
            <div>
                <h2>Post #<%= post.id %></h2>
                <p><%= post.title %></p>
                <p>
                    <%= post.text %>
                </p>
                <div>
                    <p>
                        Likes: <%= post.likes.count %> ‚ù§Ô∏è
                    </p>
                    <p>
                        Comments: <%= post.comments.count %> üìù
                    </p>
                </div>
            </div>
            <ul>
                <% post.comments.each do |comment| %>
                    <li>
                        <p>
                            Comment #<%= comment.id %>: <%= comment.text %>
                        </p>
                    </li>
                <% end %>
            </ul>
        <% end %>
    </div>
    <% else %>
    <p>
        No posts yet.
    </p>
<% end %>