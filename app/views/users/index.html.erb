<h1>
    Users List
</h1>
<% if @users.any? %>
    <ul>
        <% @users.each do |user| %>
            <li>
                <img src="<%= user.photo %>" alt="<%= user.name %>" />
                <%= link_to user.name, user_path(user) %>
                <%= link_to user.posts.count, user_posts_path(user) %>
            </li>
        <% end %>
    </ul>
<% else %>
    <p>
        No users yet.
    </p>
<% end %>