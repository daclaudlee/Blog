<h1>User Profile</h1>
<%= render 'shared/user', user: @user %>
<div class="border">
    <h2>
        Bio
    </h2>
    <p>
        <%= @user.bio %>
    </p>
</div>
<% if @user.posts.any? %>
    <div>
        <% @user.posts.each do |post| %>
            <div class="posts border">
                <h2>Post #<%= post.id %></h2>
                <%= link_to post.title, user_post_path(@user, post) %>
                <p>
                    <%= post.text %>
                </p>
                <%= render 'shared/count-likes-comments', post: post %>
            </div>
        <% end %>
    </div>
<% else %>
        <p>
            This user has no posts.
        </p>
<% end %>